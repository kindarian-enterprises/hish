# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_STORAGE=.data/qdrant

# Collection + model
COLLECTION_NAME=mayr_dev_assets
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternative: BAAI/bge-small-en-v1.5

# Indexer scope - only dev assets repo, only documentation files
INDEX_INCLUDE=mayr-dev-assets/**/*.md,mayr-dev-assets/**/*.mdx,mayr-dev-assets/**/*.txt
INDEX_EXCLUDE=**/.git/**,**/.data/**,**/node_modules/**,**/.venv/**,**/dist/**,**/build/**,**/__pycache__/**,**/venv/**,**/.pytest_cache/**

# Chunking
CHUNK_MAX_TOKENS=300
CHUNK_MIN_CHARS=200
CHUNK_OVERLAP_TOKENS=40

# Optional SSE MCP server port
MCP_SSE_PORT=8000
