# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_STORAGE=.data/qdrant

# Collection + model
COLLECTION_NAME=hish_framework
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
# Alternative: BAAI/bge-small-en-v1.5

# Indexer scope - framework documentation and workflows
INDEX_INCLUDE=**/*.md,**/*.mdx,**/*.txt,contexts/**/*,docs/**/*,workflows-and-processes/**/*
INDEX_EXCLUDE=**/.git/**,**/.data/**,**/node_modules/**,**/.venv/**,**/dist/**,**/build/**,**/__pycache__/**,**/venv/**,**/.pytest_cache/**

# Chunking
CHUNK_MAX_TOKENS=300
CHUNK_MIN_CHARS=200
CHUNK_OVERLAP_TOKENS=40

# Optional SSE MCP server port
MCP_SSE_PORT=8000
