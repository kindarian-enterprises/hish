# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_STORAGE=.data/qdrant

# Collection + model
COLLECTION_NAME=mayr_code_repos
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternative: BAAI/bge-small-en-v1.5

# Indexer scope - focus on code files from other repos
INDEX_INCLUDE=mayr/**/*.py,mayr/**/*.yaml,mayr/**/*.yml,mayr/**/*.json,mayr/**/*.md,mayr-home-assistant/**/*.py,mayr-home-assistant/**/*.yaml,mayr-home-assistant/**/*.yml,mayr-home-assistant/**/*.json,mayr-home-assistant/**/*.md
INDEX_EXCLUDE=**/.git/**,**/.data/**,**/node_modules/**,**/.venv/**,**/dist/**,**/build/**,**/__pycache__/**,**/venv/**,**/.pytest_cache/**

# Chunking
CHUNK_MAX_TOKENS=300
CHUNK_MIN_CHARS=200
CHUNK_OVERLAP_TOKENS=40

# Optional SSE MCP server port
MCP_SSE_PORT=8000
